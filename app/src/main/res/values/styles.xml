<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Purple" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/cyan_accent</item>
        <item name="drawerArrowStyle">@style/drawerWhite</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/accent_light_blue</item>
    </style>

    <style name="AppTheme.Pink" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/accent_lime</item>
    </style>

    <style name="AppTheme.DarkBlue" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/accent_pink</item>
    </style>
<!--                       new                        -->
    <style name="AppTheme.LightBlue" parent="AppTheme">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/light_blue_dark</item>
        <item name="colorAccent">@color/red_accent</item>
    </style>

    <style name="AppTheme.LightGreen" parent="AppTheme">
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/light_green_dark</item>
        <item name="colorAccent">@color/deep_purple_accent</item>
    </style>

    <style name="AppTheme.Yellow" parent="AppTheme">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/deep_purple_accent</item>
    </style>

    <style name="AppTheme.Amber" parent="AppTheme">
        <item name="colorPrimary">@color/amber</item>
        <item name="colorPrimaryDark">@color/amber_dark</item>
        <item name="colorAccent">@color/purple_accent</item>
    </style>

    <style name="AppTheme.Brown" parent="AppTheme">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/brown_dark</item>
        <item name="colorAccent">@color/amber_accent</item>
    </style>

    <style name="AppTheme.Gray" parent="AppTheme">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
        <item name="colorAccent">@color/red_accent</item>
    </style>



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/drawerWhite</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="drawerWhite" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
