<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.minimalart.studentlife.fragments.ModifyRentsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/modif_rents_appbar">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/modif_rents_toolbar"
                app:title="@string/modify_rents_title"
                app:titleTextColor="@color/white">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frag_modify_rents_swipe"
            android:layout_below="@id/modif_rents_appbar">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frag_modify_rents_recyclerview"
                android:paddingBottom="@dimen/standard_padding">

            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:textSize="22sp"
            android:id="@+id/frag_modify_no_rent"
            android:textColor="@color/textDisabled"
            android:text="@string/no_rent_user_posted"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:paddingLeft="@dimen/standard_padding"
            android:paddingRight="@dimen/standard_padding"/>

    </RelativeLayout>

</FrameLayout>
